// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pokemon {
  pokedex        Int       @id @unique
  name           String    @unique
  image          String
  evolutionURL   String?
  happiness      Int?
  evolvesFrom    String?
  blurb          String?
  shape          String?
  habitat        String?
  colour         String?
  height         Int?
  weight         Int?
  experience     Int?
  hp             Int?
  attack         Int?
  defence        Int?
  specialAttack  Int?
  specialDefence Int?
  speed          Int?
  type           Type[]
  ability        Ability[]
}

model Type {
  id      Int       @id @unique @default(autoincrement())
  type    String
  pokemon Pokemon[]
}

model Ability {
  id      Int       @id @unique @default(autoincrement())
  ability String
  url     String
  Pokemon Pokemon[]
}
